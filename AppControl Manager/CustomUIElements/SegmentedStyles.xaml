        <Style.Setters>
            <Setter Property="Background" Value="{ThemeResource ButtonItemBackground}" />
            <Setter Property="Foreground" Value="{ThemeResource ButtonItemForeground}" />
            <Setter Property="Padding" Value="{ThemeResource ButtonItemPadding}" />
